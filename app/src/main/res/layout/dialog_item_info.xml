<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/back_bottom_sheet_dialog"
  android:padding="10dp">

  <TextView
    android:id="@+id/txt_toolbar"
    style="@style/TextViewDefault"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/screen_details"
    android:textSize="25sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
    android:id="@+id/layout_inputs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/txt_toolbar">

    <EditText
      android:id="@+id/input_type"
      style="@style/EditTextDefault"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:hint="@string/hint_type" />

    <EditText
      android:id="@+id/input_model"
      style="@style/EditTextDefault"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:hint="@string/hint_model" />

    <EditText
      android:id="@+id/input_manufacturer"
      style="@style/EditTextDefault"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:hint="@string/hint_manufacturer" />

    <EditText
      android:id="@+id/input_location"
      style="@style/EditTextDefault"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:hint="@string/hint_location" />

    <EditText
      android:id="@+id/input_amount"
      style="@style/EditTextDefault"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:hint="@string/hint_amount" />

  </LinearLayout>

  <Button
    android:id="@+id/btn_save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_primary"
    android:text="@string/button_save"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/layout_inputs" />

  <Button
    android:id="@+id/btn_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/button_delete"
    android:textSize="20sp"
    app:layout_constraintTop_toBottomOf="@id/btn_save" />

</androidx.constraintlayout.widget.ConstraintLayout>